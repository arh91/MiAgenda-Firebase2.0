<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListSuppliersActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:padding="30dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAtrasRegistroProveedores"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="33dp"
        android:text="ATRÃS"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/findSupplierByName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_nombreProv" />

    <Button
        android:id="@+id/findSupplierByName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="33dp"
        android:text="Buscar por nombre"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnAtrasRegistroProveedores"
        app:layout_constraintTop_toBottomOf="@+id/btnOkProv" />

    <TextView
        android:id="@+id/textView_nombreProv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="442dp"
        android:layout_marginBottom="209dp"
        android:text="Introduzca un nombre de proveedor:"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/btnAtrasRegistroProveedores"
        app:layout_constraintEnd_toEndOf="@+id/editTextNombreProv"
        app:layout_constraintStart_toStartOf="@+id/editTextNombreProv"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextNombreProv"
        android:layout_width="317dp"
        android:layout_height="0dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="170dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/findSupplierByName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_nombreProv" />

    <Button
        android:id="@+id/btnOkProv"
        android:layout_width="99dp"
        android:layout_height="0dp"
        android:layout_marginTop="571dp"
        android:layout_marginBottom="80dp"
        android:text="OK"
        app:layout_constraintBottom_toTopOf="@+id/findSupplierByName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnVolverListaProv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="365dp"
        android:text="Volver"
        app:layout_constraintBottom_toTopOf="@+id/textView_nombreProv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>