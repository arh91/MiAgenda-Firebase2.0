<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomersDetail">

    <TextView
        android:id="@+id/textView_codigo_cli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="35dp"
        android:text="Código:"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/editText_nombre_cli"
        app:layout_constraintEnd_toStartOf="@+id/editText_codigo_cli" />

    <TextView
        android:id="@+id/textView_nombre_cli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="243dp"
        android:layout_marginEnd="17dp"
        android:text="Nombre:"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/editText_nombre_cli"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_direccion_cli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="17dp"
        android:text="Dirección:"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/editText_direccion_cli"
        app:layout_constraintEnd_toStartOf="@+id/editText_direccion_cli" />

    <TextView
        android:id="@+id/textView_telefono_cli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="69dp"
        android:text="Teléfono:"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/editText_telefono_cli"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editText_codigo_cli"
        android:layout_width="250dp"
        android:layout_height="41dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView_codigo_cli"
        app:layout_constraintEnd_toEndOf="@+id/editText_nombre_cli"
        app:layout_constraintStart_toStartOf="@+id/editText_nombre_cli" />

    <EditText
        android:id="@+id/editText_nombre_cli"
        android:layout_width="250dp"
        android:layout_height="41dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView_nombre_cli"
        app:layout_constraintEnd_toEndOf="@+id/editText_direccion_cli"
        app:layout_constraintStart_toStartOf="@+id/editText_direccion_cli" />

    <EditText
        android:id="@+id/editText_direccion_cli"
        android:layout_width="250dp"
        android:layout_height="41dp"
        android:layout_marginTop="68dp"
        android:layout_marginBottom="71dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_telefono_cli"
        app:layout_constraintEnd_toEndOf="@+id/editText_telefono_cli"
        app:layout_constraintStart_toStartOf="@+id/editText_telefono_cli"
        app:layout_constraintTop_toTopOf="@+id/editText_nombre_cli" />

    <EditText
        android:id="@+id/editText_telefono_cli"
        android:layout_width="250dp"
        android:layout_height="41dp"
        android:layout_marginStart="17dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView_telefono_cli"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_Eliminar_cli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:text="Eliminar"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_Modificar_cli"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_Modificar_cli" />

    <Button
        android:id="@+id/btn_Modificar_cli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="50dp"
        android:text="Modificar"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_Atras_Lista_Cli"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_Atras_Lista_Cli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="61dp"
        android:text="Atrás"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_Modificar_cli" />

    <TextView
        android:id="@+id/textView_cli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:layout_marginBottom="69dp"
        android:text="CLIENTE:"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/editText_codigo_cli"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>