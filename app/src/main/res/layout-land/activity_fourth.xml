<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FourthActivity">

    <TextView
        android:id="@+id/tituloFourthLand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="85dp"
        android:layout_marginBottom="26dp"
        android:text="NUEVO PROVEEDOR"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/edtCodigoProveedorLand"
        app:layout_constraintEnd_toStartOf="@+id/btnEnviarProveedorLand"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnEnviarProveedorLand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="97dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="98dp"
        android:text="Registrar"
        app:layout_constraintBottom_toBottomOf="@+id/btnAtrasFourthLand"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edtCodigoProveedorLand"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAtrasFourthLand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="93dp"
        android:text="Atrás"
        app:layout_constraintBottom_toBottomOf="@+id/btnListaProveedoresLand"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edtNombreProveedorLand"
        app:layout_constraintTop_toTopOf="@+id/edtCodigoProveedorLand" />

    <Button
        android:id="@+id/btnListaProveedoresLand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="75dp"
        android:text="Listado"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edtTelefonoProveedorLand" />

    <EditText
        android:id="@+id/edtCodigoProveedorLand"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="77dp"
        android:layout_marginEnd="159dp"
        android:layout_marginBottom="25dp"
        android:ems="10"
        android:hint="Código"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/edtNombreProveedorLand"
        app:layout_constraintEnd_toStartOf="@+id/btnEnviarProveedorLand"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tituloFourthLand" />

    <EditText
        android:id="@+id/edtNombreProveedorLand"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="77dp"
        android:layout_marginEnd="211dp"
        android:layout_marginBottom="25dp"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/edtDireccionProveedorLand"
        app:layout_constraintEnd_toStartOf="@+id/btnAtrasFourthLand"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtCodigoProveedorLand" />

    <EditText
        android:id="@+id/edtDireccionProveedorLand"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="25dp"
        android:ems="10"
        android:hint="Dirección"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/edtTelefonoProveedorLand"
        app:layout_constraintEnd_toEndOf="@+id/edtNombreProveedorLand"
        app:layout_constraintStart_toStartOf="@+id/edtNombreProveedorLand"
        app:layout_constraintTop_toBottomOf="@+id/edtNombreProveedorLand" />

    <EditText
        android:id="@+id/edtTelefonoProveedorLand"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="82dp"
        android:layout_marginEnd="183dp"
        android:layout_marginBottom="53dp"
        android:ems="10"
        android:hint="Teléfono"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnListaProveedoresLand"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtDireccionProveedorLand" />

</androidx.constraintlayout.widget.ConstraintLayout>