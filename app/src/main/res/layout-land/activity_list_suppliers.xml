<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListSuppliersActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnFindSupplierByName"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="94dp"
        android:layout_marginEnd="32dp"
        android:minWidth="@dimen/button_width_ratio"
        android:minHeight="@dimen/button_height_ratio"
        android:text="Buscar por nombre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAtrasRegistroProveedores"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="29dp"
        android:maxWidth="@dimen/button_width_ratio"
        android:maxHeight="@dimen/button_height_ratio"
        android:minWidth="@dimen/button_width_ratio"
        android:minHeight="@dimen/button_height_ratio"
        android:text="AtrÃ¡s"
        app:layout_constraintBottom_toBottomOf="@+id/btnOkProv"
        app:layout_constraintEnd_toEndOf="@+id/btnFindSupplierByName"
        app:layout_constraintStart_toEndOf="@+id/editTextNombreProv"
        app:layout_constraintTop_toTopOf="@+id/btnOkProv" />

    <Button
        android:id="@+id/btnOkProv"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:layout_marginStart="106dp"
        android:layout_marginBottom="89dp"
        android:maxWidth="@dimen/button_width_ratio"
        android:maxHeight="@dimen/button_height_ratio"
        android:minWidth="@dimen/button_width_ratio"
        android:minHeight="@dimen/button_height_ratio"
        android:text="Ok"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/editTextNombreProv" />

    <EditText
        android:id="@+id/editTextNombreProv"
        android:layout_width="450dp"
        android:layout_height="45dp"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/btnOkProv"
        app:layout_constraintStart_toStartOf="@+id/textView_nombreProv"
        app:layout_constraintTop_toBottomOf="@+id/textView_nombreProv" />

    <TextView
        android:id="@+id/textView_nombreProv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="186dp"
        android:layout_marginBottom="91dp"
        android:text="Introduzca un nombre de proveedor:"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btnOkProv"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>