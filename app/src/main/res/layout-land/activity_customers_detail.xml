<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomersDetail">

    <TextView
        android:id="@+id/textView_codigo_cli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:text="Código:"
        app:layout_constraintBaseline_toBaselineOf="@+id/editText_codigo_cli"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView_nombre_cli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="35dp"
        android:text="Nombre:"
        app:layout_constraintBaseline_toBaselineOf="@+id/editText_nombre_cli"
        app:layout_constraintEnd_toStartOf="@+id/editText_nombre_cli" />

    <TextView
        android:id="@+id/textView_direccion_cli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:text="Dirección:"
        app:layout_constraintBottom_toBottomOf="@+id/textView_telefono_cli"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView_telefono_cli" />

    <TextView
        android:id="@+id/textView_telefono_cli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="80dp"
        android:text="Teléfono:"
        app:layout_constraintBottom_toTopOf="@+id/btn_Modificar_cli"
        app:layout_constraintEnd_toStartOf="@+id/editText_telefono_cli" />

    <EditText
        android:id="@+id/editText_codigo_cli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="432dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView_codigo_cli"
        app:layout_constraintTop_toBottomOf="@+id/textView_cli" />

    <EditText
        android:id="@+id/editText_nombre_cli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="36dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/editText_telefono_cli"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editText_direccion_cli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView_direccion_cli"
        app:layout_constraintStart_toEndOf="@+id/textView_direccion_cli" />

    <EditText
        android:id="@+id/editText_telefono_cli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView_telefono_cli"
        app:layout_constraintStart_toStartOf="@+id/editText_nombre_cli" />

    <Button
        android:id="@+id/btn_Eliminar_cli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="41dp"
        android:text="Eliminar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_Modificar_cli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginBottom="41dp"
        android:text="Modificar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editText_direccion_cli" />

    <Button
        android:id="@+id/btn_Atras_Lista_Cli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="85dp"
        android:layout_marginEnd="91dp"
        android:layout_marginBottom="41dp"
        android:text="Atrás"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/editText_telefono_cli" />

    <TextView
        android:id="@+id/textView_cli"
        android:layout_width="133dp"
        android:layout_height="29dp"
        android:layout_marginTop="65dp"
        android:layout_marginBottom="65dp"
        android:text="CLIENTE:"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textView_nombre_cli"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>