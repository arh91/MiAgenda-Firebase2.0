<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomersDetail">

    <TextView
        android:id="@+id/textView_cli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="206dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="205dp"
        android:layout_marginBottom="18dp"
        android:text="CLIENTE"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/editText_codigo_cli"
        app:layout_constraintEnd_toStartOf="@+id/btn_Modificar_cli"
        app:layout_constraintStart_toEndOf="@+id/textView_telefono_cli"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_Eliminar_cli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="59dp"
        android:text="Eliminar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editText_codigo_cli"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_Modificar_cli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="59dp"
        android:text="Modificar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editText_nombre_cli"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_Atras_Lista_Cli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="90dp"
        android:text="Atrás"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editText_telefono_cli"
        app:layout_constraintTop_toTopOf="@+id/btn_Modificar_cli" />

    <EditText
        android:id="@+id/editText_codigo_cli"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="12dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/editText_nombre_cli"
        app:layout_constraintEnd_toStartOf="@+id/btn_Eliminar_cli"
        app:layout_constraintStart_toEndOf="@+id/textView_codigo_cli"
        app:layout_constraintTop_toBottomOf="@+id/textView_cli" />

    <EditText
        android:id="@+id/editText_nombre_cli"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="85dp"
        android:layout_marginBottom="15dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/editText_direccion_cli"
        app:layout_constraintEnd_toStartOf="@+id/btn_Modificar_cli"
        app:layout_constraintStart_toEndOf="@+id/textView_nombre_cli"
        app:layout_constraintTop_toBottomOf="@+id/editText_codigo_cli" />

    <EditText
        android:id="@+id/editText_direccion_cli"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="261dp"
        android:layout_marginBottom="25dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/editText_telefono_cli"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView_direccion_cli"
        app:layout_constraintTop_toBottomOf="@+id/editText_nombre_cli" />

    <EditText
        android:id="@+id/editText_telefono_cli"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="114dp"
        android:layout_marginBottom="92dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_Atras_Lista_Cli"
        app:layout_constraintStart_toEndOf="@+id/textView_telefono_cli"
        app:layout_constraintTop_toBottomOf="@+id/editText_direccion_cli" />

    <TextView
        android:id="@+id/textView_codigo_cli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="2dp"
        android:text="Código:"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/editText_codigo_cli"
        app:layout_constraintEnd_toStartOf="@+id/editText_codigo_cli"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView_nombre_cli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="2dp"
        android:text="Nombre:"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/editText_nombre_cli"
        app:layout_constraintEnd_toStartOf="@+id/editText_nombre_cli"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView_direccion_cli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="4dp"
        android:text="Dirección:"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/editText_direccion_cli"
        app:layout_constraintEnd_toStartOf="@+id/editText_direccion_cli"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView_telefono_cli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="2dp"
        android:text="Teléfono:"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/editText_telefono_cli"
        app:layout_constraintEnd_toStartOf="@+id/editText_telefono_cli"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>