<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomersDetail">

    <TextView
        android:id="@+id/textView_codigo_cli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="73dp"
        android:text="Código:"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/editText_codigo_cli"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView_nombre_cli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre:"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/editText_nombre_cli"
        app:layout_constraintStart_toStartOf="@+id/textView_codigo_cli" />

    <TextView
        android:id="@+id/textView_direccion_cli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dirección:"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/editText_direccion_cli"
        app:layout_constraintStart_toStartOf="@+id/textView_nombre_cli" />

    <TextView
        android:id="@+id/textView_telefono_cli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teléfono:"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/editText_telefono_cli"
        app:layout_constraintStart_toStartOf="@+id/textView_direccion_cli" />

    <EditText
        android:id="@+id/editText_codigo_cli"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/editText_nombre_cli"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editText_nombre_cli"
        app:layout_constraintTop_toBottomOf="@+id/textView_cli" />

    <EditText
        android:id="@+id/editText_nombre_cli"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/editText_direccion_cli"
        app:layout_constraintStart_toStartOf="@+id/editText_direccion_cli"
        app:layout_constraintTop_toBottomOf="@+id/editText_codigo_cli" />

    <EditText
        android:id="@+id/editText_direccion_cli"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/editText_telefono_cli"
        app:layout_constraintStart_toStartOf="@+id/editText_telefono_cli"
        app:layout_constraintTop_toBottomOf="@+id/editText_nombre_cli" />

    <EditText
        android:id="@+id/editText_telefono_cli"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginTop="34dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/textView_telefono_cli"
        app:layout_constraintTop_toBottomOf="@+id/editText_direccion_cli" />

    <Button
        android:id="@+id/btn_Eliminar_cli"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginStart="65dp"
        android:layout_marginBottom="173dp"
        android:text="Eliminar"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_Modificar_cli"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="51dp"
        android:text="Modificar"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_Eliminar_cli"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_Eliminar_cli" />

    <Button
        android:id="@+id/btn_Atras_Lista_Cli"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="51dp"
        android:text="Atrás"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_Modificar_cli" />

    <TextView
        android:id="@+id/textView_cli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_marginTop="65dp"
        android:text="CLIENTE:"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/editText_codigo_cli"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>