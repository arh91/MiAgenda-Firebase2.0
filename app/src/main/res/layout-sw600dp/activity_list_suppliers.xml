<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListSuppliersActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:padding="48dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAtrasRegistroProveedores"
        android:layout_width="wrap_content"
        android:layout_height="63dp"
        android:layout_marginStart="92dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="64dp"
        android:text="ATRÁS"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/findSupplierByName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_nombreProv" />

    <Button
        android:id="@+id/findSupplierByName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="64dp"
        android:text="Buscar por nombre"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnAtrasRegistroProveedores"
        app:layout_constraintTop_toBottomOf="@+id/btnOkProv" />

    <TextView
        android:id="@+id/textView_nombreProv"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="414dp"
        android:layout_marginEnd="119dp"
        android:layout_marginBottom="260dp"
        android:text="Introduzca un nombre de proveedor:"
        android:textSize="27sp"
        app:layout_constraintBottom_toTopOf="@+id/btnAtrasRegistroProveedores"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextNombreProv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="175dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/findSupplierByName"
        app:layout_constraintEnd_toEndOf="@+id/textView_nombreProv"
        app:layout_constraintStart_toStartOf="@+id/textView_nombreProv"
        app:layout_constraintTop_toBottomOf="@+id/textView_nombreProv" />

    <Button
        android:id="@+id/btnOkProv"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="590dp"
        android:layout_marginBottom="61dp"
        android:text="OK"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/findSupplierByName"
        app:layout_constraintStart_toStartOf="@+id/editTextNombreProv"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnVolverListaProv"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="302dp"
        android:text="Volver"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/textView_nombreProv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>