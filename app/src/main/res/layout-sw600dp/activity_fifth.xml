<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FifthActivity">

    <EditText
        android:id="@+id/edtCodigoCliente"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginTop="91dp"
        android:ems="10"
        android:hint="Código"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tituloFifth" />

    <EditText
        android:id="@+id/edtNombreCliente"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="120dp"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/edtDireccionCliente"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edtCodigoCliente" />

    <EditText
        android:id="@+id/edtDireccionCliente"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginTop="401dp"
        android:ems="10"
        android:hint="Dirección"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtTelefonoCliente"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginTop="70dp"
        android:ems="10"
        android:hint="Teléfono"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtDireccionCliente" />

    <Button
        android:id="@+id/btnEnviarCliente"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="64dp"
        android:text="Registrar"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnAtrasFifth"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnAtrasFifth" />

    <Button
        android:id="@+id/btnAtrasFifth"
        android:layout_width="wrap_content"
        android:layout_height="66dp"
        android:layout_marginEnd="89dp"
        android:layout_marginBottom="58dp"
        android:text="Atrás"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btnListaClientes"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tituloFifth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:text="NUEVO CLIENTE"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnListaClientes"
        android:layout_width="wrap_content"
        android:layout_height="66dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="68dp"
        android:text="LISTADO"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnAtrasFifth" />

</androidx.constraintlayout.widget.ConstraintLayout>